{
  "name": "pharmacy-pos",
  "version": "1.0.0",
  "description": "Pharmacy Point of Sale System",
  "main": "main.cjs",
  "author": "Emmanuel Appiah",
  "email": "emk.appiah@gmail.com",
  "license": "ISC",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd backend && npm install",
    "dev": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\"",
    "devs": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run electron\"",
    
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "electron": "wait-on http://localhost:3000 && electron . --no-sandbox",
    "start": "npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:win": "npm run build:frontend && electron-builder --win portable --x64",
    "build:win-portable": "npm run build:frontend && electron-builder --win portable --x64",
    "build:win-dir": "npm run build:frontend && electron-builder --win --x64 --dir",
    "build:linux": "npm run build:frontend && electron-builder --linux",
    "build:linux-appimage": "npm run build:frontend && electron-builder --linux AppImage",
    "build:linux-deb": "npm run build:frontend && electron-builder --linux deb",
    "build:mac": "npm run build:frontend && electron-builder --mac",
    "package:win": "cd release && rm -f PharmacyPOS-portable.zip 2>/dev/null || true && zip -r PharmacyPOS-portable.zip win-unpacked/",
    "clean": "rm -rf release dist build frontend/dist"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.3"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "electron": "^38.7.2",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.pharmacypos.app",
    "productName": "PharmacyPOS",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.cjs",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/**/*",
          "!*.log",
          "!test*",
          "!*.md"
        ]
      },
      {
        "from": "frontend/dist",
        "to": "frontend/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "build/icon.ico",
      "asar": true,
      "asarUnpack": [
        "backend/**/*",
        "frontend/dist/**/*"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
