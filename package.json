{
  "name": "savoury-pos",
  "version": "1.0.0",
  "description": "Pharmacy POS System",
  "main": "main.cjs",
  "author": "Your Name",
  "license": "ISC",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "electron": "wait-on http://localhost:3000 && electron .",
    "start": "npm run dev",
    "build:win": "npm run build:frontend && electron-builder --win",
    "build:frontend": "cd frontend && npm run build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.3"
  },
  "devDependencies": {
    "electron": "^38.7.2",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.savourypos.app",
    "productName": "SavouryPOS",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
